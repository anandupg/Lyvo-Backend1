# Server Configuration
PORT=5002
NODE_ENV=development

# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/lyvo_chat?retryWrites=true&w=majority

# JWT Configuration
# JWT Configuration (MUST match user service)
JWT_SECRET=your_jwt_secret_here
USER_JWT_SECRET=your_jwt_secret_here
USER_SERVICE_JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Internal API Key (for booking-service integration)
INTERNAL_API_KEY=your-internal-api-key-here

# CORS Configuration - PRODUCTION READY
# Your Vercel URL included in the comma-separated list
CORS_ORIGIN=https://lyvo-teal.vercel.app,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Socket.io Configuration - PRODUCTION READY
# Your Vercel URL included in the comma-separated list
SOCKET_CORS_ORIGIN=https://lyvo-teal.vercel.app,http://localhost:3000,http://localhost:3001